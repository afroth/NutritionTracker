@using NutritionTracker.Pages.Ingredients.Service;

@inject IJSRuntime JsRuntime
@inject IngredCRUDservice service

<div class="col-5 bg-light m-2 justify-content-start">

    <div class="p-3 mb-3 bg-primary text-white text-center">Add New Ingredient</div>

    <EditForm Model="Ingredient">
        <div class="form-group">
            <label for="name">Ingredient Name</label>
            <input type="text" id="name" class="form-control" required @bind-value="@Ingredient.IngredientName" />
        </div>

        <div class="form-group">
            <label for="price">Calories</label>
            <input type="text" id="price" class="form-control" @bind="@Ingredient.Calories" />
        </div>

        <div class="form-group">
            <label for="quantity">Fats</label>
            <input type="text" id="quantity" class="form-control" @bind="@Ingredient.Fats" />
        </div>

        <div class="form-group">
            <label for="Description">Protein</label>
            <input type="text" id="Description" class="form-control" @bind="@Ingredient.Protein" />
        </div>

        <div class="form-group">
            <label for="Description">Sugar</label>
            <input type="text" id="Description" class="form-control" @bind="@Ingredient.Sugar" />
        </div>

        <div class="form-group">
            <label for="Description">Carbs</label>
            <input type="text" id="Description" class="form-control" @bind="@Ingredient.Carbs" />
        </div>

        <div class="text-center p-3 mb-3">
            <button class="btn btn-info" @onclick="AddNewIngredient"> Add Product</button>
        </div>
    </EditForm>
</div>

