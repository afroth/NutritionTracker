@page "/login"
@using NutritionTracker.Models


<div class="col-5 bg-light m-2 justify-content-start">

    <div class="p-3 mb-3 bg-primary text-white text-center">Login</div>
    <EditForm Model="user" OnSubmit="HandleLogin">
        <div class="form-group">
            <label for="Description">User Name</label>
            <input type="text" id="Description" class="form-control" @bind-value="@user.Username" />
        </div>

        <div class="form-group">
            <label for="Description">Password</label>
            <input type="text" id="Description" class="form-control" @bind="@user.Password" />
        </div>

        <div class="text-center p-3 mb-3">
            <button class="btn btn-info"> Login </button>
        </div>
    </EditForm>
</div>
